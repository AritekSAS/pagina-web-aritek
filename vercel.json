{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "redirects": [
    {
      "source": "/wp-admin",
      "destination": "https://presentaciones.aritek.com.co/wp-admin",
      "permanent": false
    },
    {
      "source": "/wp-admin/:path*",
      "destination": "https://presentaciones.aritek.com.co/wp-admin/:path*",
      "permanent": false
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}